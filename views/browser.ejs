<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 p-10 text-white">
      <div class="flex w-full justify-end">
        <a
          class="bg-red-500 rounded-md px-3 py-2 text-sm inline-block"
          href="/logout"
          >Logout</a
        >
      </div>
      <div class="posts">
        <h3 class="text-zinc-400">Discover Posts</h3>
        <div class="postcontainer mt-2 flex gap-2">
          <% posts.forEach((post) => { %>
          <div class="post w-1/3 p-5 border-1 border-zinc-700 mb-4 bg-zinc-800">
            <h4 class="text-blue-500 mb-2">@<%= post.user.username %></h4>
            <p class="text-sm tracking-tight"><%= post.content %></p>
            <small class="mt-2 inline-block"> <%= post.likes.length %> likes</small>

            <div class="btns flex gap-4 mt-5">
                <a class="text-blue-500" href="/like/<%= post._id %>">
                    <%= post.likes.indexOf(post.user._id) === -1 ? "Like" : "Unlike" %>
                </a>
              <a class="text-zinc-400" href="/commit">Comments</a>
              <a class="text-zinc-400" href="/edit/<%= post._id %>">
                    <%= post.user._id == user.userid ? "Edit" : ""%>
              </a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
