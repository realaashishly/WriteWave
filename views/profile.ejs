<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 p-10 text-white">
      <div class="flex w-full justify-end">
        <a
          class="bg-red-500 rounded-md px-3 py-2 text-sm inline-block"
          href="/logout"
          >Logout</a
        >
      </div>
      <h3 class="text-3xl">Hello, <%= user.name %></h3>
      <h5 class="mb-5">you can create a new post.</h5>
      <form action="/post" method="post">
        <textarea
          class="resize-none bg-transparent border-2 border-zinc-800 rounded-md p-3 outline-none block w-1/3"
          name="content"
          id="post"
          placeholder="what's in your mind"
        ></textarea>
        <input
          class="px-3 py-2 bg-blue-500 block rounded-md mt-2 w-40"
          type="submit"
          value="Create New Post"
        />
      </form>
      <div class="posts mt-20">
        <h3 class="text-zinc-400">Your Posts</h3>
        <div class="postcontainer mt-2 grid grid-cols-3 gap-2 rounded-md">
            <% user.posts.forEach((post) => { %>
            <div class="post w-full p-5 border border-zinc-700 mb-4 bg-zinc-800">
                <h4 class="text-blue-500 mb-2">@<%= user.username %></h4>
                <p class="text-sm tracking-tight"><%= post.content %></p>
                <small class="mt-2 inline-block"> <%= post.likes.length %> likes</small>
                <div class="btns flex gap-4 mt-5">
                    <a class="text-blue-500" href="/like/<%= post._id %>">
                        <%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike" %>
                    </a>
                    <a class="text-zinc-400" href="/edit/<%= post._id%>">Edit</a>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
    
    </div>
  </body>
</html>
